{
  "expo": {
    "name": "ClearCase",
    "slug": "clearcase-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "clearcase",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.clearcase.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "ClearCase needs camera access to photograph legal documents.",
        "NSPhotoLibraryUsageDescription": "ClearCase needs photo access to upload legal documents."
      }
    },
    "android": {
      "package": "com.clearcase.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "sentry-expo",
        {
          "organization": "clearcase",
          "project": "clearcase-mobile"
        }
      ],
      "@sentry/react-native"
    ],
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "clearcase",
            "project": "clearcase-mobile"
          }
        }
      ]
    },
    "extra": {
      "eas": {
        "projectId": ""
      }
    }
  }
}
