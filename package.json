{
  "name": "clearcase",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "api:dev": "tsx watch apps/api/src/server.ts",
    "api:start": "tsx apps/api/src/server.ts",
    "api:typecheck": "tsc -p apps/api/tsconfig.json --noEmit",
    "worker:start": "tsx apps/worker/src/worker.ts",
    "worker:typecheck": "tsc -p apps/worker/tsconfig.json --noEmit",
    "mvp:preflight": "powershell -ExecutionPolicy Bypass -File scripts/mvp/preflight.ps1",
    "mvp:aws-check": "powershell -ExecutionPolicy Bypass -File scripts/mvp/aws-ready.ps1",
    "mvp:start": "powershell -ExecutionPolicy Bypass -File scripts/mvp/start-dev.ps1",
    "mvp:phase3-smoke": "powershell -ExecutionPolicy Bypass -File scripts/mvp/phase3-smoke.ps1 -StartApi",
    "mvp:phase4-smoke": "powershell -ExecutionPolicy Bypass -File scripts/mvp/phase4-smoke.ps1 -StartWorker",
    "mvp:phase5-smoke": "powershell -ExecutionPolicy Bypass -File scripts/mvp/phase5-smoke.ps1 -StartApi -StartWorker",
    "mvp:phase6-smoke": "powershell -ExecutionPolicy Bypass -File scripts/mvp/phase6-smoke.ps1 -StartApi -StartWorker",
    "mvp:backup": "powershell -ExecutionPolicy Bypass -File scripts/mvp/backup.ps1",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.988.0",
    "@aws-sdk/client-sqs": "^3.988.0",
    "@aws-sdk/s3-request-presigner": "^3.988.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "pg": "^8.16.3",
    "zipcodes": "^8.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "prisma": "^7.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  }
}
