# ============================================================
# ClearCase Environment Variables
# Copy to .env and fill in real values
# ============================================================

# --- Database ---
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/clearcase?schema=public"

# --- Server ---
# NODE_ENV=production
# API_PORT=3001
# CORS_ORIGIN=https://app.clearcase.com
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=60000

# --- Authentication (choose one) ---
# Option A: Firebase Auth
# AUTH_PROVIDER=firebase
# FIREBASE_PROJECT_ID=your-firebase-project-id
#
# Option B: JWT (HS256)
# AUTH_PROVIDER=jwt
# JWT_SECRET=your-secret-key-min-32-chars
#
# Dev mode auto-enabled when NODE_ENV != production
# CLEARCASE_DEV_HEADER_AUTH_ENABLED=false

# --- AWS (S3 + SQS) ---
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=clearcase-uploads
# SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/ACCOUNT/clearcase-documents

# --- OCR ---
OCR_PROVIDER=google_vision
GOOGLE_APPLICATION_CREDENTIALS=C:\Clearcase\secrets\vision-key.json

# --- Billing (Stripe) ---
# BILLING_PROVIDER=stripe
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PRICE_ID_PLUS_MONTHLY=price_...
# BILLING_WEBHOOK_SECRET=whsec_...

# --- Push Notifications ---
# PUSH_PROVIDER=expo
# EXPO_ACCESS_TOKEN=
